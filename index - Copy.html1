    });
    newWishBtn.addEventListener('click', randomWish);

    copyWishBtn.addEventListener('click', async ()=>{
      const text = wishText.textContent + "\n" + wishSub.textContent;
      try{
        await navigator.clipboard.writeText(text);
        copyStatus.textContent = "âœ… Copied! Now paste it to Sharanya ğŸ’›";
      }catch{
        copyStatus.textContent = "âš ï¸ Copy failed. Please manually select & copy.";
      }
    });

    // ---------- Music ----------
    const music = document.getElementById('bgMusic');
    const musicBtn = document.getElementById('musicBtn');
    const musicText = document.getElementById('musicText');
    const musicDot = document.getElementById('musicDot');
    let isPlaying = false;

    async function toggleMusic(){
      try{
        if(!isPlaying){
          await music.play();
          isPlaying = true;
          musicBtn.textContent = "â¸ Pause";
          musicText.textContent = "On (birthday vibes âœ¨)";
          musicDot.classList.add('on');
        }else{
          music.pause();
          isPlaying = false;
          musicBtn.textContent = "â–¶ Play";
          musicText.textContent = "Off (tap Play)";
          musicDot.classList.remove('on');
        }
      }catch(err){
        alert("Your browser blocked autoplay. Tap Play again to start music.");
      }
    }
    musicBtn.addEventListener('click', toggleMusic);

    // ---------- Notes (stored locally) ----------
    const noteName = document.getElementById('noteName');
    const noteMsg = document.getElementById('noteMsg');
    const addNoteBtn = document.getElementById('addNoteBtn');
    const notesList = document.getElementById('notesList');
    const clearNotesBtn = document.getElementById('clearNotesBtn');

    function loadNotes(){
      const raw = localStorage.getItem("sharanya_notes");
      const notes = raw ? JSON.parse(raw) : [];
      notesList.innerHTML = "";
      if(notes.length === 0){
        notesList.innerHTML = `<div class="tiny">No notes yet. Be the first to leave a sweet message ğŸ’Œ</div>`;
        return;
      }
      notes.slice().reverse().forEach(n=>{
        const div = document.createElement("div");
        div.className = "note-item";
        div.innerHTML = `
          <div class="who">${escapeHtml(n.name || "Anonymous")} âœ¨</div>
          <div class="msg">${escapeHtml(n.msg)}</div>
        `;
        notesList.appendChild(div);
      });
    }

    function saveNote(n){
      const raw = localStorage.getItem("sharanya_notes");
      const notes = raw ? JSON.parse(raw) : [];
      notes.push(n);
      localStorage.setItem("sharanya_notes", JSON.stringify(notes));
    }

    function escapeHtml(str){
      return String(str).replace(/[&<>"']/g, s => ({
        "&":"&amp;","<":"&lt;",">":"&gt;",'"':"&quot;","'":"&#039;"
      }[s]));
    }

    addNoteBtn.addEventListener('click', ()=>{
      const name = noteName.value.trim();
      const msg = noteMsg.value.trim();
      if(!msg){
        alert("Write a message first ğŸ˜Š");
        return;
      }
      saveNote({ name, msg, ts: Date.now() });
      noteMsg.value = "";
      loadNotes();
      alert("âœ… Note added! Sharanya is going to love this ğŸ’›");
    });

    clearNotesBtn.addEventListener('click', ()=>{
      const ok = confirm("Clear notes on this device only?");
      if(ok){
        localStorage.removeItem("sharanya_notes");
        loadNotes();
      }
    });

    loadNotes();
  </script>
</body>
</html>
