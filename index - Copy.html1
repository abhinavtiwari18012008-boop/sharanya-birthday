        p.x += Math.sin(p.a + p.y*0.01)*1.4;
        p.a += 0.03;
        ctx.save();
        ctx.translate(p.x,p.y);
        ctx.rotate(p.a);
        ctx.fillStyle = p.c;
        ctx.fillRect(-p.w/2,-p.h/2,p.w,p.h);
        ctx.restore();
      });
      confettiPieces = confettiPieces.filter(p=>p.y < canvas.height + 40);
